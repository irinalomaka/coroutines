<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/liContainer"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_padding_small">

    <ImageView
        android:id="@+id/userAvatarImg"
        android:layout_width="@dimen/width_height_img"
        android:layout_height="@dimen/width_height_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_padding"
        android:paddingTop="@dimen/margin_padding_tiny"
        android:paddingBottom="@dimen/margin_padding_tiny"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userAvatarImg"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="user" />

    <TextView
        android:id="@+id/userType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_padding"
        android:paddingBottom="@dimen/margin_padding_small"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userAvatarImg"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        tools:text="user" />

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="@dimen/margin_padding"
        android:background="@color/colorGreyLight"
        app:layout_constraintTop_toBottomOf="@+id/userAvatarImg" />

</androidx.constraintlayout.widget.ConstraintLayout>